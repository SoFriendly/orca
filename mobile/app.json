{
  "expo": {
    "name": "Orca Portal",
    "slug": "orca-portal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "orca",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sofriendly.orca",
      "infoPlist": {
        "LSApplicationCategoryType": "public.app-category.developer-tools"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121212"
      },
      "package": "com.orca.portal"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-secure-store",
        {
          "faceIDPermission": false
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Orca Portal to access your camera for QR code scanning"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
