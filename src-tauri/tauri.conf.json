{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chell",
  "version": "0.1.0",
  "identifier": "com.sofriendly.chell",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://releases.chell.app/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzQUYxMjJCMjFGOURCQUUKUldTdTIva2hLeEt2MDlhN1pCVzNydFYveHFqR1dObkcvQTZPOGZVcGVlbFVoSkZUbU5WckZBUloK"
    }
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Chell",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "visible": false,
        "backgroundColor": "#121212"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
